<Window x:Class="DemoWpf.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWpf"
        mc:Ignorable="d"
        Title="Добавление Сотрудника" 
        Height="550" 
        Width="600"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        FontFamily="Cascadia Code">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Window.Background>
        <SolidColorBrush Color="#4a494a"/>
    </Window.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="← Назад"
                    Width="100"
                    Height="30"
                    Background="#83708c"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="0,0,20,0"
                    Click="BackToAdminPanelButton_Click"/>

            <TextBlock Text="Добавление Сотрудника"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка -->
            <StackPanel Grid.Column="0" Margin="10">
                <!-- Фамилия -->
                <TextBlock Text="Фамилия" 
                           Foreground="White" 
                           Margin="0,0,0,5"
                           FontSize="16"/>
                <Grid>
                    <TextBox x:Name="LastNameTextBox"
                             Padding="10"
                             FontSize="16"
                             BorderThickness="1"
                             BorderBrush="White"
                             Background="White"
                             Foreground="Black"/>
                    <TextBlock Text="Введите фамилию"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=LastNameTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>

                <!-- Имя -->
                <TextBlock Text="Имя" 
                           Foreground="White" 
                           Margin="0,15,0,5"
                           FontSize="16"/>
                <Grid>
                    <TextBox x:Name="FirstNameTextBox"
                             Padding="10"
                             FontSize="16"
                             BorderThickness="1"
                             BorderBrush="White"
                             Background="White"
                             Foreground="Black"/>
                    <TextBlock Text="Введите имя"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=FirstNameTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>

                <!-- Логин -->
                <TextBlock Text="Логин" 
                           Foreground="White" 
                           Margin="0,15,0,5"
                           FontSize="16"/>
                <Grid>
                    <TextBox x:Name="UsernameTextBox"
                             Padding="10"
                             FontSize="16"
                             BorderThickness="1"
                             BorderBrush="White"
                             Background="White"
                             Foreground="Black"/>
                    <TextBlock Text="Введите логин"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=UsernameTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>

                <!-- Роль -->
                <TextBlock Text="Роль" 
                           Foreground="White" 
                           Margin="0,15,0,5"
                           FontSize="16"/>
                <ComboBox x:Name="RoleComboBox" 
                          Padding="10"
                          FontSize="16"
                          BorderThickness="1"
                          BorderBrush="White"
                          Background="White"
                          Foreground="Black">
                    <ComboBoxItem Content="Администратор" Tag="Admin"/>
                    <ComboBoxItem Content="Сотрудник" Tag="Employee" IsSelected="True"/>
                </ComboBox>
            </StackPanel>

            <!-- Правая колонка -->
            <StackPanel Grid.Column="1" Margin="10">
                <!-- Email -->
                <TextBlock Text="Email" 
                           Foreground="White" 
                           Margin="0,0,0,5"
                           FontSize="16"/>
                <Grid>
                    <TextBox x:Name="EmailTextBox"
                             Padding="10"
                             FontSize="16"
                             BorderThickness="1"
                             BorderBrush="White"
                             Background="White"
                             Foreground="Black"/>
                    <TextBlock Text="example@example.com"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=EmailTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>

                <!-- Телефон -->
                <TextBlock Text="Телефон" 
                           Foreground="White" 
                           Margin="0,15,0,5"
                           FontSize="16"/>
                <Grid>
                    <TextBox x:Name="PhoneTextBox"
                             Padding="10"
                             FontSize="16"
                             BorderThickness="1"
                             BorderBrush="White"
                             Background="White"
                             Foreground="Black"/>
                    <TextBlock Text="+7 (XXX) XXX-XX-XX"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=PhoneTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>

                <!-- Пароль -->
                <TextBlock Text="Пароль" 
                           Foreground="White" 
                           Margin="0,15,0,5"
                           FontSize="16"/>
                <Grid>
                    <PasswordBox x:Name="PasswordBox"
                                 Padding="10"
                                 FontSize="16"
                                 BorderThickness="1"
                                 BorderBrush="White"
                                 Background="White"
                                 Foreground="Black"/>
                    <TextBlock Text="Введите пароль"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Password.IsEmpty, ElementName=PasswordBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>

                <!-- Статус блокировки -->
                <CheckBox x:Name="IsLockedCheckBox"
                          Content="Заблокировать аккаунт"
                          Foreground="White"
                          Margin="0,20,0,0"
                          FontSize="16"
                          HorizontalAlignment="Left"/>
            </StackPanel>
        </Grid>

        <!-- Кнопка добавления -->
        <Button Grid.Row="2"
                Content="Добавить сотрудника"
                Width="300"
                Height="45"
                Background="#83708c"
                Foreground="White"
                FontSize="18"
                FontWeight="Bold"
                BorderThickness="0"
                HorizontalAlignment="Center"
                Margin="0,20"
                Click="AddEmployeeButton_Click"/>
    </Grid>
</Window>